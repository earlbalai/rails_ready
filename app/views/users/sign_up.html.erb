<div class="w-full h-full flex flex-col items-center justify-center">
  <h1>Sign Up</h1>
  <%= form_for @user, method: :post, html: { class: "flex flex-col space-y-2" } do |f| %>
    <div class="flex flex-col space-y-1">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", class: 'border rounded-full px-3 py-1' %>
    </div>
    <div class="flex flex-col space-y-1">
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email", class: 'border rounded-full px-3 py-1' %>
    </div>
    <div class="flex flex-col space-y-1">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", class: 'border rounded-full px-3 py-1' %>
    </div>
    <div class="flex flex-col space-y-1">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'border rounded-full px-3 py-1' %>
    </div>
    <%= f.submit "Create Account", class: 'bg-indigo-500 text-white font-semibold px-3 py-1 w-full rounded-full' %>
    <small class="text-center">Already have an account? <%= link_to "Sign In", sign_in_path, class: 'underline text-indigo-500' %></small>
  <% end %>
</div>